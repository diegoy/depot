<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1><%= t('.title_html') + " - " + pluralize(session[:counter], "visit") if session[:counter]>=5%></h1>
<% @products.each do |product| %>
  <div class="entry">
    <%= image_tag(product.image_url) %>
    <h3><%= product.title %></h3>
    <%= sanitize(product.description) %>
    <div class="price_line">
      <span class="price"><%= number_to_currency(usd_to_euros(product.price)) %></span>
      <%= button_to t('.add_html'), line_items_path(product_id: product), remote: true %>
    </div>
  </div>
<% end %>
